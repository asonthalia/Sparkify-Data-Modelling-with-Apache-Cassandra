   "cell_type": "markdown",
   "metadata": {
    "editable": true
   },
   "source": [
    "### Drop the tables before closing out the sessions"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 106,
   "metadata": {
    "editable": true
   },
   "outputs": [],
   "source": [
    "# Dropping Table\n",
    "try:\n",
    "    query = \"DROP TABLE play_data_q1;\"\n",
    "    rows = session.execute(query)\n",
    "    query = \"DROP TABLE play_data_q2;\"\n",
    "    rows = session.execute(query)\n",
    "    query = \"DROP TABLE play_data_q3;\"\n",
